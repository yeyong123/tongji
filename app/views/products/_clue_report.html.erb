<div class="report-product">
	<span>当天机会类型报表</span>
	<% Clue.all.each do |clue| %>
		<% unless clue.advisories.today.count == 0 %>
			<div class="report-table product-today">
				<div class="product-number">
					<%= link_to clue.advisories.today.count, clue_path(clue.id) %>
				</div>
				<div class="product-name product-name2">
					<%= clue.name %>
				</div>
			</div>
		<% end %>
	<% end %>
</div>
