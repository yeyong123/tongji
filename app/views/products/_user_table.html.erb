	<div class="tool-zixun">
		<div class="current-zixun">
			<% User.all.each do |user| %>
				<div class="user-count">
					<% unless user.advisories.today.count == 0 %>
					<div class="user-count-one">
						<%= link_to user.advisories.today.count, advisory_path(user.id)%>
					</div>
					<div class="user-name">
						<%= user.name %>
					</div>
				<% end %>
				</div>
			<% end %>
			<div class="count">
				<div class="count-number">
				<%= today.count %>
			</div>
				<div class="user-name">
					当天合计
				</div>
			</div>
		</div>
	<div class="zixun-tool2">
			<span>本周数据</span>
			<% User.all.each do |user| %>
				<div class="user-count">
					<% unless user.advisories.past_week.count == 0 %>
					<div class="user-count-one">
						<%= user.advisories.past_week.count %>
					</div>
					<div class="user-name">
						<%= user.name %>
					</div>
				<% end %>
				</div>
			<% end %>
			<div class="count">
				<div class="count-number">
					<%= Advisory.past_week.count %>
				</div>
				<div class="user-name">
					合计
				</div>
			</div>
		</div>



		<div class="zixun-tool">
			<span>全部数据</span>
			<% User.all.each do |user| %>
				<div class="user-count">
					<% unless user.advisories.count == 0 %>
					<div class="user-count-one">
						<%= user.advisories.count %>
					</div>
					<div class="user-name">
						<%= user.name %>
					</div>
				<% end %>
				</div>
			<% end %>
			<div class="count">
				<div class="count-number">
					<%= Advisory.count %>
				</div>
				<div class="user-name">
					合计
				</div>
			</div>
		</div>
	</div>

