<div class="user-advisory">
	<table class="table">
		<% @products.each do |product| %>
			<tr>
			<td><%= link_to product.name, product_path(product) %></td>
			<td><%= link_to "编辑", edit_product_path(product), class: "btn btn-success btn-mini" %></td>
			<td><%= link_to "删除", product, method: :delete, confirm: "确认删除", class: "btn btn-danger btn-mini" %></td>
		</tr>
	<% end %>
</table>

</div>
